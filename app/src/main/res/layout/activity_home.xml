<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context="com.jcstudio.com.activity.HomeActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:alpha="0.18"
        android:layout_marginRight="150dp"
        android:layout_gravity="top|center"
        android:background="@drawable/uca_logo"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!--<TextView
            android:id="@+id/show_cum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="#"
            android:gravity="center"
            android:textColor="#ffffff">

        </TextView>-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <at.markushi.ui.CircleButton
                    android:id="@+id/nuevo_ciclo_cb"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cb_color="#1C4166"
                    android:layout_gravity="center"
                    app:cb_pressedRingWidth="16dp"
                    android:src="@drawable/calculating2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Agregar ciclo"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    app:fontFamily="sans-serif-condensed-light" />

            </LinearLayout>




    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <at.markushi.ui.CircleButton
                    android:id="@+id/cal_cum_cb"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cb_color="#1C4166"
                    android:layout_gravity="center"
                    app:cb_pressedRingWidth="16dp"
                    android:src="@drawable/result"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="CUM"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    app:fontFamily="sans-serif-condensed-light" />

            </LinearLayout>




        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">





    </LinearLayout>
</FrameLayout>

